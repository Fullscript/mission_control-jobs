<% if job.failed? %>
  <h2 class="subtitle">Error information</h2>

  <table class="table">
    <tbody>
    <tr>
      <th>Type</th>
      <td> <%= job.last_execution_error.error_class %> </td>
    </tr>
    <tr>
      <th>Message</th>
      <td> <%= job.last_execution_error.try(:message) || job.last_execution_error.inspect %> </td>
    </tr>
    </tbody>
  </table>

  <%= render "mission_control/jobs/jobs/failed/backtrace_toggle", application: @application, job: @job if backtrace_cleaner? %>

  <pre class="is-family-monospace mb-4 backtrace-selector"><%= failed_job_backtrace(job, clean: should_clean_backtrace?) %></pre>
<% end %>
