<% navigation(title: "Failed jobs", section: :failed_jobs) %>

<div class="level">
  <%= render "mission_control/jobs/failed_jobs/filter" %>
  <%= render "mission_control/jobs/failed_jobs/toolbar" %>
</div>

<table class="jobs failed table queues is-hoverable is-fullwidth">
  <tbody>
  <thead>
  <tr>
    <th style="width: 40%;">Job</th>
    <th style="width: 40%;">Error</th>
    <th></th>
  </tr>
  </thead>

  <%= render partial: "mission_control/jobs/failed_jobs/job", collection: @jobs %>

  </tbody>
</table>

<nav class="buttons is-right" role="navigation" aria-label="pagination">
  <span class="mr-3"><%= current_page %> / <%= total_pages %></span>
  <%= link_to "Previous page", url_for(page: current_page - 1, **jobs_filter_param), class: "pagination-previous", disabled: first_page? %>
  <%= link_to "Next page", url_for(page: current_page + 1, **jobs_filter_param), class: "pagination-next", disabled: last_page? %>
</nav>
