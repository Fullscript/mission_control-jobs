<tr class="queue">
  <td>
    <%= link_to queue.name, application_queue_path(@application, queue.name) %>
    <% if queue.paused? %>
      <span class="ml-4 tag is-warning">Paused</span>
    <% end %>
  </td>
  <td>
    <%= queue.size %>
  </td>
  <td class="pr-0">
    <%= render "mission_control/jobs/queues/actions", queue: queue %>
  </td>
</tr>
